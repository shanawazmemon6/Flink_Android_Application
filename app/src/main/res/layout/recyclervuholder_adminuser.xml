<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:contentPadding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/admin_userimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="27dp"
                android:maxHeight="150dp"
                android:maxWidth="150dp"
                android:minHeight="150dp"
                android:minWidth="150dp"
                app:srcCompat="@mipmap/place" />

            <TextView
                android:id="@+id/admin_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/admin_userimage"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/admin_userimage"
                android:layout_toRightOf="@+id/admin_userimage" />

            <TextView
                android:id="@+id/admin_useremail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/admin_username"
                android:layout_alignStart="@+id/admin_username"
                android:layout_below="@+id/admin_username"
                android:layout_marginTop="9dp" />

            <TextView
                android:id="@+id/admin_userphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/admin_useremail"
                android:layout_alignStart="@+id/admin_useremail"
                android:layout_below="@+id/admin_useremail"
                android:layout_marginTop="9dp" />

            <TextView
                android:id="@+id/admin_usergender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/admin_userphone"
                android:layout_alignStart="@+id/admin_userphone"
                android:layout_below="@+id/admin_userphone"
                android:layout_marginTop="9dp" />

            <TextView
                android:id="@+id/admin_userrole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/admin_usergender"
                android:layout_alignStart="@+id/admin_usergender"
                android:layout_below="@+id/admin_usergender"
                android:layout_marginTop="9dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/admin_userstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/admin_userrole"
                android:layout_alignStart="@+id/admin_userrole"
                android:layout_below="@+id/admin_userrole"
                android:layout_marginTop="9dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/accept_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.26"
                    android:background="@color/cardview_dark_background"
                    android:text="Accept"
                    android:textColor="@color/cardview_light_background"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/reject_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.26"
                    android:background="@color/cardview_dark_background"
                    android:text="Reject"
                    android:textColor="@color/cardview_light_background"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/block_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.26"
                    android:background="@color/cardview_dark_background"
                    android:text="Block"
                    android:textColor="@color/cardview_light_background"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/admin_userimage"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/admin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_dark_background"
                    android:text="admin"
                    android:textColor="@color/cardview_light_background"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/student_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_dark_background"
                    android:text="Student"
                    android:textColor="@color/cardview_light_background"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/alumin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_dark_background"
                    android:text="alumin"
                    android:textColor="@color/cardview_light_background"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/employee_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_dark_background"
                    android:text="Employe"
                    android:textColor="@color/cardview_light_background"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

